md-input-container(ng-if="::schema.display!='none'")
  label(for='sf-{{::schema.path}}' ng-bind='::schema.key|translate')
  textarea(id='sf-{{::schema.path}}' ng-model='entity[schema.path]' md-maxlength='{{::schema.maxLength}}' ng-change='validate(schema.path)')
  span.error(ng-bind='errors[schema.path]')
